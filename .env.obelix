# Environment Configuration for IOBT25 Demo
# Copy this file to .env and modify as needed for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Original Server Configuration
ORIGNAL_SERVER_PORT=8183
ORIGNAL_SERVER_HOST=obelix195
ORIGINAL_SERVER_MODEL_NAME=ensemble-effnet-c5-lr-0.005-tin

# Head Server Configuration
HEAD_SERVER_PORT=8185
HEAD_SERVER_HOST=obelix195
HEAD_SERVER_MODEL=ensemble-effnet-c5-lr-0.005-tin
HEAD_SERVER_ADDR=${HEAD_SERVER_HOST}:${HEAD_SERVER_PORT}

# S1 Server Configuration  
S1_SERVER_PORT=8180
S1_SERVER_HOST=obelix193
S1_SERVER_MODEL_NAME=ensemble-effnet-c5-lr-0.005-tin
S1_SERVER_MODEL_PART=1


# S2 Server Configuration
S2_SERVER_PORT=8181
S2_SERVER_HOST=obelix194
S2_SERVER_MODEL_NAME=ensemble-effnet-c5-lr-0.005-tin
S2_SERVER_MODEL_PART=2

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker image directory (Change this for different environment)
DOCKER_IMG_DIR=./docker/obelix

# Dockerfile selection (s1, s2, head, original)
DOCKERFILE_S1=${DOCKER_IMG_DIR}/Dockerfile.s1
DOCKERFILE_S2=${DOCKER_IMG_DIR}/Dockerfile.s2
DOCKERFILE_HEAD=${DOCKER_IMG_DIR}/Dockerfile.head
DOCKERFILE_ORIGINAL=${DOCKER_IMG_DIR}/Dockerfile.original

# Container names
CONTAINER_NAME_HEAD=head-server
CONTAINER_NAME_S1=s1-server
CONTAINER_NAME_S2=s2-server

# Image tags
IMAGE_TAG_HEAD=head-server:latest
IMAGE_TAG_S1=s1-server:latest
IMAGE_TAG_S2=s2-server:latest

# =============================================================================
# GPU CONFIGURATION
# =============================================================================

# GPU settings
CUDA_VISIBLE_DEVICES=0
GPU_COUNT=1
GPU_CAPABILITIES=gpu

# Runtime (nvidia for Jetson, nvidia for A2)
DOCKER_RUNTIME=nvidia

# =============================================================================
# PATHS AND VOLUMES
# =============================================================================

# Source code path
SOURCE_CODE_PATH=./system

# Models directory
MODELS_PATH=./models

# Logs directory
LOGS_PATH=./logs

# Results directory
RESULTS_PATH=./system/results

# =============================================================================
# PYTHON CONFIGURATION
# =============================================================================

# Python settings
PYTHON_UNBUFFERED=1
PYTHON_VERSION=3.9

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Network settings
NETWORK_MODE=bridge
RESTART_POLICY=no

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode (true/false)
DEV_MODE=true

# Mount source code in development
MOUNT_SOURCE_CODE=true